        ],
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "Group id"
          }
        ],
        "responses": {
          "200": {
            "description": "If info is found",
            "schema": {
              "$ref": "#/definitions/Group"
            }
          },
          "404": {
            "description": "If group is not found"
          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/group/create":{
      "post": {
        "operationId": "createGroup",
        "tags": [
          "group"
        ],
        "summary": "Create new group",
        "security": [
          {
            "JWT": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "groupDto",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Group"
            },
            "description": "Group details"
          }
        ],
        "responses": {
