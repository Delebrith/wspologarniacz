          }
        ],
        "responses": {
          "202": {
            "description": "If user is accepted"
          },
          "404": {
            "description": "If group or user is not found"
          },
          "409": {
            "description": "If user is already a member"
          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/group/{groupId}/reject/{userId}":{
