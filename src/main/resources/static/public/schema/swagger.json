        ],
        "summary": "Reject user's request to join the group",
        "security": [
          {
            "JWT": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "Group id"
          },
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "User id"
          }
        ],
        "responses": {
          "202": {
            "description": "If user is rejected successfully"
          },
          "404": {
            "description": "If group or user is not found"
          },
          "409": {
            "description": "If user is already a member or was not invited"
          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/group/{groupId}/acceptInvitation":{
