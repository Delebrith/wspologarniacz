          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/group/{groupId}/invite/{userId}":{
      "post": {
        "operationId": "inviteUserToGroup",
        "tags": [
          "group"
        ],
        "summary": "Invite user to group",
        "security": [
          {
            "JWT": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "Group id"
          },
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "User id"
          }
        ],
        "responses": {
          "202": {
            "description": "If invitation is sent"
          },
          "404": {
            "description": "If group or user is not found"
          },
          "409": {
            "description": "If user already belongs to group"
          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/group/{groupId}/leave":{
      "post": {
        "operationId": "leaveGroup",
        "tags": [
          "group"
        ],
        "summary": "Leave group",
        "security": [
          {
            "JWT": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "Group id"
          }
        ],
        "responses": {
          "202": {
            "description": "If group is left"
          },
          "404": {
            "description": "If group is not found"
          },
          "409": {
            "description": "If user does not belong to group"
          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/group/{groupId}/join":{
      "post": {
        "operationId": "joinGroup",
        "tags": [
          "group"
        ],
        "summary": "Request permission to join the group",
        "security": [
          {
            "JWT": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "Group id"
          }
        ],
        "responses": {
          "202": {
            "description": "If request is saved"
          },
          "404": {
            "description": "If group is not found"
          },
          "409": {
            "description": "If user already belongs to group"
          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/group/{groupId}/accept/{userId}":{
      "post": {
        "operationId": "acceptUserIntoGroup",
        "tags": [
          "group"
        ],
        "summary": "Accept user into group",
        "security": [
          {
            "JWT": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
