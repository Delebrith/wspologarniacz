          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userData",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            },
            "description": "User details"
          }
        ],
        "responses": {
          "201": {
            "description": "If valid credentials were provided"
          },
          "400": {
            "description": "If invalid data was provided"
          }
        }
      }
    },
    "/user/register/{userId}/confirm":{
      "post": {
