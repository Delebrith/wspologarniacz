        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64",
            "description": "User details"
          }
        ],
        "responses": {
          "201": {
            "description": "If valid credentials were provided"
          },
          "400": {
            "description": "If invalid data was provided"
          }
        }
      }
    },
    "/user/deregister":{
      "delete": {
        "operationId": "deregister",
        "tags": [
          "user"
        ],
        "summary": "Request deregistration",
        "security": [
          {
            "JWT": []
          }
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "204": {
            "description": "If deregistration was completed"
          },
          "400": {
            "description": "If error occurs"
          }
        }
      }
    },
    "/user/password/change":{
      "post": {
        "operationId": "changePassword",
        "tags": [
          "user"
        ],
        "summary": "Request password change",
        "security": [
          {
            "JWT": []
          }
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "password",
            "in": "body",
            "required": true,
            "schema": {
